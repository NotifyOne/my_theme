<div class="custom-list">
  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}

  {%  for item in list_items %}
    <h3>{{ item.title }}</h3>
    <i>{{ item.author }}</i>
    <div class="custom-list--description">
      {{ item.description }}
    </div>
  {% endfor %}
</div>
